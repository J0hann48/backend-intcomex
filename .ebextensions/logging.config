files:
  "/etc/awslogs/config/logs.conf":
    mode: "000755"
    owner: root
    group: root
    content: |
      [/var/log/application.log]
      file = /var/log/application.log
      log_group_name = your-log-group
      log_stream_name = {instance_id}
      datetime_format = %Y-%m-%d %H:%M:%S

container_commands:
  01_restart_awslogs:
    command: "service awslogs restart"